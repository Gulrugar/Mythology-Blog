---
import "@styles/global.css";

import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import HeaderGroup from "@components/HeaderGroup.astro";
import SVGs from "@components/SVGs.astro";

import type { SEOProps } from "../types/seo";

const {
  title,
  description,
  image,
  data,
  robots,
  redirect = false,
} = Astro.props as SEOProps & {
  redirect?: boolean;
};
---

<html lang="en">
  <MainHead {title} {description} {image} {data} {robots} {redirect} />
  <body>
    <SVGs />
    <HeaderGroup />
    <main role="main">
      <slot />
    </main>
    <Footer />
    <style>
      body {
        overflow-x: hidden;
      }
      [role="main"] {
        display: grid;
        grid-template-columns: minmax(0, 1fr);
        width: 100%;
        align-content: start;
      }
    </style>
  </body>
</html>
