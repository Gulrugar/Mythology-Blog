    font-size: 1.75rem;
    line-height: 2rem;
    font-weight: 700;
    -webkit-text-decoration-skip: ink;
    text-decoration-skip-ink: auto;
    text-underline-offset: 0.25rem;
  }

  .type--giraffe-link:hover {
    -webkit-text-decoration-line: underline;
    text-decoration-line: underline;
  }

  .section-title {
    display: block;
    text-align: center;
    font-size: 0;
    line-height: 0;
  }

  .three-post__title {
    margin-bottom: 2rem;
  }

  /* h2 class="comp section-title__heading mntl-text-block" */
  .section-title__heading {
    font-size: 1.75rem;
    line-height: 2rem;
    font-weight: 700;
    -webkit-text-decoration-skip: ink;
    text-decoration-skip-ink: auto;
    text-underline-offset: 0.25rem;
  }
  .section-title__heading {
    display: inline;
    text-transform: capitalize;
  }

  @media (min-width: 50em) {
    .section-title__heading {
      font-size: 2.25rem;
      line-height: 2.75rem;
    }
  }

  /* svg class="icon icon-arrow icon-arrow_right" */
  .section-title .icon {
    fill: rgb(var(--color-base-accent));
  }
  .section-title .icon {
    margin-left: 0.5rem;
  }

  .three-post .icon-arrow_right {
    width: 1.5rem;
    height: 1.5rem;
    fill: rgb(var(--color-base-accent));
    margin-left: 0.5rem;
  }

  /* path */
  .animate-arrow .icon-arrow path {
    transform: translate(-0.15625rem);
    transition: transform 0.1s ease;
  }

  .animate-arrow:hover .icon-arrow path {
    transform: translate(0.15625rem);
  }

  /* div class="comp three-post__inner card-list mntl-document-card-list mntl-card-list mntl-block" */
  .mntl-card-list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  @supports (display: grid) {
    .mntl-card-list {
      display: grid;
      grid-template-columns: 1fr;
      grid-gap: 1rem;
    }
  }
  .card-list {
    grid-gap: 0;
    grid-template-columns: 1fr;
  }

  @media (min-width: 50em) {
    .three-post__inner.card-list {
      grid-template-columns: repeat(3, 1fr);
      grid-gap: 1.5rem;
      align-items: flex-start;
    }
  }

  @media (min-width: 64em) {
    .three-post__inner.card-list {
      grid-gap: 3rem;
    }
  }

  /* a class="comp card--image-top mntl-card-list-items mntl-document-card mntl-card card card--no-image" */
  .card {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    padding: 0.7rem 1rem;
    overflow: hidden;
    width: 100%;
    background: #fff;
    cursor: pointer;
    font-weight: 700;
  }

  .mntl-card-list .card {
    margin-bottom: 1rem;
    padding: 0;
  }

  @supports (display: grid) {
    .mntl-card-list .card {
      margin-bottom: 0;
    }
  }

  .card-list .card {
    display: flex;
    flex-direction: row;
    font-weight: 400;
    overflow: initial;
    background: 0 0;
    padding: 0;
    border: 0;
    padding: 1rem 0;
  }

  .card-list .card:not(:last-child) {
    border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  }

  .three-post__inner.card-list .card--image-top {
    display: flex;
    flex-direction: column;
    font-weight: 400;
    overflow: initial;
    padding: 0;
  }

  .three-post__inner.card-list .card--image-top:not(:last-child) {
    margin-bottom: 2rem;
  }

  .three-post__inner.card-list .card--image-top.card,
  .three-post__inner.card-list .card--image-top.card:not(:last-child) {
    border-width: 0;
  }

  /* div class="loc card__top" */

  /* div class="card__media mntl-universal-image card__media universal-image__container" */
  .card__media {
    height: 100%;
    margin-bottom: 1rem;
    order: 1;
    position: relative;
  }

  .card-list .card .card__media {
    width: 9.9375rem;
    height: auto;
    margin-right: 1rem;
    margin-bottom: 0;
  }

  .card-list .card .card__media {
    margin-right: 0.75rem;
  }

