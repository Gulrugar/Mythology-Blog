---
interface Props {
  text: string;
}

const { text } = Astro.props as Props;
---

<div
  class="comp related-link upnext-link mntl-sc-block beauty-sc-block-featuredlink mntl-sc-block-featuredlink mntl-block"
>
  <a href="#">
    <span class="link__wrapper">
      {text}
    </span>
  </a>
</div>

<style>
  /* div class="comp article-outro mntl-block" */

  /* div class="comp upnext-link mntl-sc-block beauty-sc-block-featuredlink mntl-sc-block-featuredlink mntl-block" */

  .mntl-sc-block-featuredlink.upnext-link {
    margin-bottom: 1.75rem;
  }

  /* before */
  .mntl-sc-block-featuredlink.upnext-link::before {
    content: "Up Next:";
  }
</style>
