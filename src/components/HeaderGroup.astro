---
import AnnouncementBar from "@components/AnnouncementBar.astro";
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";
import { formatBlogPosts } from "@scripts/utils";

const posts = await getCollection("blog");
const post = formatBlogPosts(posts)[0];

const latestText = `Welcome to <strong>Mythical Art!</strong> View the latest story <strong><i>&quot;${post.data.title}&quot;</i></strong>`;
const latestLink = `/posts/${post.slug}`;
---

<AnnouncementBar text={latestText} link={latestLink} />
<Header />
