---
import settings from "../data/settings.json";
import { Icon } from "astro-icon";
import HeaderDrawer from "./HeaderDrawer.astro";
---

<div class="section-header">
  <sticky-header class="header-wrapper" data-sticky-type="on-scroll-up">
    <header class="header page-width">
      <HeaderDrawer />
      <h1 class="header__heading">
        <a href="/" class="header__heading-link link link link--text">
          <img
            src={settings.logo.src}
            alt={settings.logo.alt}
            class="header__heading-logo motion-reduce"
            width="100px"
            height="100px"
          />
          <span class="h2">{settings["site-data"].title}</span>
        </a>
      </h1>
      <nav class="header__inline-menu">
        <ul class="list-menu list-menu--inline" role="list">
          {
            settings["navigation-menu"].links.map((navItem) => (
              <li>
                <a
                  href={navItem.path}
                  class="header-menu__item list-menu__item link link--text"
                  data-navLink
                >
                  <span>{navItem.name}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <div class="header__icons">
        <a
          href={settings["social-media-accounts"].facebook}
          class="header__icon icon-facebook link"
        >
          <Icon name="mdi:facebook" width="25" height="25" />
        </a>
        <a
          href={settings["social-media-accounts"].instagram}
          class="header__icon icon-instagram link"
        >
          <Icon name="mdi:instagram" width="25" height="25" />
        </a>
        <a
          href={settings["social-media-accounts"].twitter}
          class="header__icon icon-twitter link"
        >
          <Icon name="mdi:twitter" width="25" height="25" />
        </a>
      </div>
    </header>
  </sticky-header>
</div>

<style>
  /* div class="header-wrapper section-header" */
  .header-wrapper {
    display: block;
    position: relative;
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
    background-color: rgb(var(--color-background));
  }
  .section-header {
    z-index: 10;
  }

  /* header class="header" */
  .header {
    display: grid;
    grid-template-areas: "left-icons heading icons";
    grid-template-columns: 1fr 2fr 1fr;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .header {
      grid-template-areas: "heading navigation icons";
      grid-template-columns: auto auto 1fr;
      column-gap: 2rem;
    }
  }

  .header {
    padding: 10px 1.875rem;
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  }

  @media screen and (min-width: 750px) {
    .header {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-left: 3.125rem;
      padding-right: 3.125rem;
    }
  }

  /* h1 class="header__heading" */
  .header__heading {
    margin: 0;
    line-height: 0;
  }
  .header__heading,
  .header__heading-link {
    grid-area: heading;
    justify-self: center;
  }

  @media screen and (max-width: 989px) {
    .header__heading,
    .header__heading-link {
      text-align: center;
    }
  }

  @media screen and (min-width: 990px) {
    .header__heading,
    .header__heading-link {
      justify-self: start;
    }
  }

  /* a class="header__heading-link link link--text" */
  .header__heading-link {
    display: inline-block;
    padding: 0.46875rem;
    text-decoration: none;
    word-break: break-word;
    display: flex;
    align-items: center;

    transition: transform 0.2s ease;
  }

  .header__heading-link:hover {
    transform: scale(1.07);
  }

  @media screen and (min-width: 990px) {
    .header__heading-link {
      margin-left: -0.46875rem;
    }
  }

  /* span class="h2" */
  .header__heading-link > span {
    margin-left: 1rem;
    text-wrap: nowrap;
    white-space: nowrap;
  }

  /* img class="header__heading-logo motion-reduce" */
  .header__heading-logo {
    height: auto;
    max-width: 100%;
  }

  /* nav class="header__inline-menu" */
  .header__inline-menu {
    margin-left: 0;
    grid-area: navigation;
    display: none;
  }

  @media screen and (min-width: 990px) {
    .header__inline-menu {
      display: block;
    }
  }

  /* ul class="list-menu list-menu--inline" */
  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  /* li */

  /* a class="header-menu__item list-menu__item link link--text" */
  .header-menu__item {
    padding: 0.75rem;
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.75);
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: 1.3;
  }

  .list-menu__item:hover span {
    text-decoration: underline;
    text-decoration-color: rgb(var(--color-base-accent));
    text-decoration-thickness: 0.125rem;
    text-underline-offset: 0.1875rem;
  }

  /* span */

  /* div class="header__icons" */
  .header__icons {
    grid-area: icons;
    justify-self: end;
    padding-right: 0.5rem;
    display: none;
  }

  @media screen and (min-width: 990px) {
    .header__icons {
      display: flex;
    }
  }

  /* a class="header__icon icon-***" */
  .header__icon {
    height: 2.75rem;
    width: 2.75rem;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header__icon:last-child {
    margin-right: -0.75rem;
  }

  .header__icon:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease;
    color: rgb(var(--color-base-accent));
  }

  /* Sticky Header styles */
  .section-header-sticky {
    position: sticky;
    top: 0;
  }
  .section-header-hidden {
    top: calc(-1 * var(--header-height));
  }

  .section-header-hidden.menu-open {
    top: 0;
  }

  .section-header.animate {
    transition: top 0.15s ease-out;
  }
</style>

<script>
  import "../script/sticky-header.ts";
</script>
