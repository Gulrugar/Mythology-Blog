---
import settings from "../data/settings.json";
import { Icon } from "astro-icon";
import HeaderDrawer from "./HeaderDrawer.astro";
---

<div class="header-wrapper section-header">
  <header class="header page-width">
    <HeaderDrawer />
    <h1 class="header__heading">
      <a href="/" class="header__heading-link link link link--text">
        <span class="h2">Site Title</span></a
      >
    </h1>
    <nav class="header__inline-menu">
      <ul class="list-menu list-menu--inline" role="list">
        {
          settings["nav-data"].map((navItem) => (
            <li>
              <a
                href={navItem.path}
                class="header-menu__item list-menu__item link link--text"
                data-navLink
              >
                <span>{navItem.name}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="header__icons">
      <a href="#" class="header__icon icon-instagram">
        <Icon name="mdi:instagram" width="25" height="25" />
      </a>
      <a href="#" class="header__icon icon-facebook">
        <Icon name="mdi:facebook" width="25" height="25" />
      </a>
    </div>
  </header>
</div>

<style>
  /* div class="header-wrapper section-header" */
  .header-wrapper {
    display: block;
    position: relative;
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }
  .section-header {
    z-index: 3;
  }

  /* header class="header" */
  .header {
    display: grid;
    grid-template-areas: "left-icons heading icons";
    grid-template-columns: 1fr 2fr 1fr;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .header {
      grid-template-areas: "heading navigation icons";
      grid-template-columns: auto auto 1fr;
      column-gap: 2rem;
    }
  }

  .header {
    padding: 10px 1.875rem;
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  }

  @media screen and (min-width: 750px) {
    .header {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-left: 3.125rem;
      padding-right: 3.125rem;
    }
  }

  /* h1 class="header__heading" */
  .header__heading {
    margin: 0;
    line-height: 0;
  }
  .header__heading,
  .header__heading-link {
    grid-area: heading;
    justify-self: center;
  }

  @media screen and (max-width: 989px) {
    .header__heading,
    .header__heading-link {
      text-align: center;
    }
  }

  @media screen and (min-width: 990px) {
    .header__heading,
    .header__heading-link {
      justify-self: start;
    }
  }

  /* a class="header__heading-link link link--text" */
  .header__heading-link {
    display: inline-block;
    padding: 0.46875rem;
    text-decoration: none;
    word-break: break-word;
  }
  @media screen and (min-width: 990px) {
    .header__heading-link {
      margin-left: -0.46875rem;
    }
  }

  /* span class="h2" */

  /* nav class="header__inline-menu" */
  .header__inline-menu {
    margin-left: 0;
    grid-area: navigation;
    display: none;
  }

  @media screen and (min-width: 990px) {
    .header__inline-menu {
      display: block;
    }
  }

  /* ul class="list-menu list-menu--inline" */
  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  /* li */

  /* a class="header-menu__item list-menu__item link link--text" */
  .header-menu__item {
    padding: 0.75rem;
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.75);
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: 1.3;
  }

  /* span */

  /* div class="header__icons" */
  .header__icons {
    display: flex;
    grid-area: icons;
    justify-self: end;
    padding-right: 0.5rem;
  }

  /* a class="header__icon icon-***" */
  .header__icon {
    height: 2.75rem;
    width: 2.75rem;
    padding: 0;

    display: flex;
    align-items: center;
    justify-content: center;
  }
  .icon-facebook {
    margin-right: -0.75rem;
  }
</style>

<script>
  import "../script/nav.js";
</script>
