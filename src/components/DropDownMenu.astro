---
type Props = {
  navItem: {
    name: string;
    path: string;
    links: {
      name: string;
      path: string;
    }[];
  };
};

const { navItem } = Astro.props as Props;
---

<li class="dropdown">
  <a
    href={navItem.path}
    class="header-menu__item list-menu__item link link--text"
    data-navLink
  >
    <span>{navItem.name}</span>
  </a>
  <ul class="dropdown-menu menu-item-wrap menu-item-col-5">
    <li class="menu-item">
      <a href="/">Hercules</a>
    </li>
  </ul>
</li>

<style>
  /* li class="dropdown" */
  .dropdown {
    position: relative;
  }

  /* ::after */
  /* .dropdown:after {
    position: absolute;
    right: 0;
    top: 25%;
    content: ">";
    line-height: 1;
    transition: -webkit-transform 0.3s;
    transition: transform 0.3s;
    transition: transform 0.3s, -webkit-transform 0.3s;
    opacity: 0.7;
  }

  .dropdown:hover:after {
    -webkit-transform: rotate(-180deg);
    transform: rotate(-180deg);
    transition: -webkit-transform 0.3s;
    transition: transform 0.3s;
    transition: transform 0.3s, -webkit-transform 0.3s;
  } */
  /* a class="header-menu__item list-menu__item link link--text" */
  .header-menu__item {
    padding: 0.75rem;
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.75);

    font-weight: bold;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: 1.3;
  }

  .list-menu__item:hover span {
    text-decoration: underline;
    text-decoration-color: rgb(var(--color-base-accent));
    text-decoration-thickness: 0.125rem;
    text-underline-offset: 0.1875rem;
  }

  /* span */

  /* ul class="dropdown-menu menu-item-wrap menu-item-col-5" */
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 1000;
    display: none;
    float: left;
    min-width: 160px;
    padding: 5px 0;
    margin: 2px 0 0;
    list-style: none;
    font-size: 14px;
    text-align: left;
    background-color: #fff;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
    background-clip: padding-box;
  }

  .dropdown-menu {
    margin-top: 0;
    border-top-right-radius: 0;
    border-top-left-radius: 0;
  }

  .dropdown-menu {
    min-width: 120px;
  }

  .dropdown-menu {
    display: block;
    padding: 0;
    opacity: 0;
    -webkit-transform: rotateX(-90deg);
    transform: rotateX(-90deg);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    transition: opacity 0.1s 0.2s, visibility 0.1s 0.3s, -webkit-transform 0.3s;
    transition: transform 0.3s, opacity 0.1s 0.2s, visibility 0.1s 0.3s;
    transition: transform 0.3s, opacity 0.1s 0.2s, visibility 0.1s 0.3s,
      -webkit-transform 0.3s;
    visibility: hidden;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border-radius: 0;
    border: 0;
  }

  .menu-item-wrap {
    padding: 15px 20px;
    font-size: 0;
    box-sizing: content-box;
  }

  /* note: was an inline style */
  .dropdown-menu {
    left: -50%;
  }

  /* .menu-item-wrap.menu-item-col-5 {
    width: 960px;
  } */

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    -webkit-transform: rotateX(0);
    transform: rotateX(0);
    transition: opacity 0.1s, -webkit-transform 0.3s;
    transition: transform 0.3s, opacity 0.1s;
    transition: transform 0.3s, opacity 0.1s, -webkit-transform 0.3s;
    visibility: visible;
  }

  /* li class="menu-item" */
  .menu-item-wrap > li {
    display: inline-block;
    width: 240px;
    vertical-align: top;
    text-align: left;
  }

  .menu-item-col-5 > li {
    width: 19.99%;
  }

  /* a */
  .dropdown-menu > li > a {
    display: block;
    padding: 3px 20px;
    clear: both;
    font-weight: 400;
    line-height: 1.42857;
    color: #333;
    white-space: nowrap;
  }

  .menu-item-wrap > li > a {
    display: inline-block;
    font-size: 16px;
    font-weight: 600;
    padding: 0 15px;
    line-height: 40px;
  }
</style>
