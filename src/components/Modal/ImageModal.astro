---
import { type ImageParamsType } from "../../content/_types";
import "../../styles/image-modal.css";

type Props = {
  images: ImageParamsType["image"][];
};

const { images } = Astro.props as Props;
---

<image-modal id="ImageModal-Article" class="image-media-modal media-modal">
  <div class="image-media-modal__dialog" role="dialog" tabindex="-1">
    <button
      id="ModalClose-article"
      type="button"
      class="image-media-modal__toggle"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        focusable="false"
        class="icon icon-close"
        fill="none"
        viewBox="0 0 18 17"
      >
        <path
          d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z"
          fill="currentColor"
        >
        </path>
      </svg>
    </button>
    <div class="image-media-modal__content" role="document">
      {
        images.map((image, index) => (
          <img src={image.src} alt={image.alt} data-media-id={index + 1} />
        ))
      }
    </div>
  </div>
</image-modal>

<style>
  /* image-modal class="image-media-modal media-modal"  */
  .media-modal {
    cursor: zoom-out;
  }
  .image-media-modal {
    background-color: rgba(0, 0, 0, 0.5);
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    visibility: hidden;
    opacity: 0;
    z-index: -1;
  }

  .image-media-modal[open] {
    visibility: visible;
    opacity: 1;
    z-index: 101;
  }

  /* div class="image-media-modal__dialog" */
  .image-media-modal__dialog {
    display: flex;
    align-items: center;
    height: 100vh;
  }

  /* button class="image-media-modal__toggle */
  .image-media-modal__toggle {
    background-color: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    color: rgba(0, 0, 0, 0.55);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    right: 1.25rem;
    padding: 0.75rem;
    position: fixed;
    z-index: 2;
    top: 1.25rem;
    width: 2.5rem;
  }

  /* svg class="icon icon-close" */
  .image-media-modal__toggle .icon {
    height: auto;
    margin: 0;
    width: 1.375rem;
  }

  /* div class=image-media-modal__content" */
  .image-media-modal__content {
    max-height: 100vh;
    width: 100%;
    overflow: auto;
  }

  @media screen and (min-width: 750px) {
    .image-media-modal__content {
      padding: 1.25rem 6.875rem;
    }
  }

  @media screen and (min-width: 990px) {
    .image-media-modal__content {
      padding-bottom: 0.9375rem;
    }
  }

  /* img */
  .image-media-modal__content > * {
    display: block;
    height: auto;
    margin: auto;
    max-width: 800px;
  }

  @media screen and (min-width: 750px) {
    .image-media-modal__content > * {
      width: 100%;
    }
  }

  .image-media-modal__content > *:not(.active) {
    display: none;
  }
</style>

<script>
  import "../../script/image-modal.ts";
</script>
